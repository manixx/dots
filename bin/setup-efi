#!/bin/sh 

vars=(
	"cryptdevice=UUID=7487d1b4-53f3-491b-9e73-63aa8f32bac6:cryptlvm"
	"root=/dev/storage/root"
	"resume=/dev/storage/swap rw"
	"initrd=\initramfs-linux.img"
	"quiet loglevel=3 udev.log_priority=3 splash"
)

efibootmgr \
	--disk /dev/nvme0n1 \
	--part 5 \
	--create \
	--label "Arch Linux" \
	--loader /vmlinuz-linux \
	--unicode "${vars[@]}" \
	--verbose 

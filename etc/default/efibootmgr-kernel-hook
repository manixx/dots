PART=5

OPTIONS="
	root=/dev/storage/root rw
	resume=/dev/storage/swap

	rd.luks.uuid=7487d1b4-53f3-491b-9e73-63aa8f32bac6
	rd.lvm.vg=storage

	apparmor=1
	security=apparmor

	quiet
	loglevel=3
	i915.enable_psr=0
	net.ifnames=0
	vga=current
	udev.log_level=3
"

OPTIONS=$(echo $OPTIONS | xargs)

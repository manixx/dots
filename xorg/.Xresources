#define white    #b6bec9
#define black    #262729
#define grey     #88909f
#define darkgrey #5b6371
#define red      #e77171
#define green    #a1bf78
#define cyan     #5ebaa5
#define yellow   #dbb774
#define blue     #73b3e7
#define magenta  #d390e7

*.foreground:  white
*.background:  [70]black
*.cursorColor: white

*.color0:  black
*.color1:  red
*.color2:  green
*.color3:  yellow
*.color4:  blue
*.color5:  magenta
*.color6:  cyan
*.color7:  grey
*.color8:  darkgrey
*.color9:  red
*.color10: green
*.color11: yellow
*.color12: blue
*.color13: magenta
*.color14: cyan
*.color15: white

Xcursor.size: 16

URxvt*font:           xft:DejaVu Sans Mono:size=9
URxvt*scrollBar:      false
URxvt*internalBorder: 21
URxvt*fading:         false
URxvt*depth:          32
URxvt*saveLines:      4000
URxvt*cursorBlink:    true

URxvt.perl-lib:        /usr/lib/urxvt/perl
URxvt*perl-ext-common: default,matcher,keyboard-select,font-size,url-select

URxvt*keyboard-select.clipboard: true
URxvt*url-launcher:              xdg-open
URxvt*matcher.button:            1
URxvt*matcher.rend.0:            Uline Bold fg5
URxvt.url-select.launcher:       xdg-open
URxvt.url-select.underline:      true

URxvt.keysym.M-K:      command:\033]720;1\007
URxvt.keysym.M-J:      command:\033]721;1\007
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-Plus:   font-size:increase
URxvt.keysym.M-Minus:  font-size:decrease
URxvt.keysym.M-0:      font-size:reset
URxvt.keysym.M-u:      perl:url-select:select_next

URxvt.iso14755:    false
URxvt.iso14755_52: false

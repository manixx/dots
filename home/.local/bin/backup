#!/bin/zsh

backup_tar=~/backup.tar.gz
backup_gpg=~/backup.gpg

tar cfzv \
	${backup_tar} \
	~/.ssh \
	~/.password-store \
	~/.gnupg \
	~/.config/chromium/Default/Bookmarks

gpg \
	--output ${backup_gpg} \
	--symmetric \
	${backup_tar}

rclone sync ${backup_gpg} gdrive:/backup

rm ${backup_tar} ${backup_gpg}

#!/bin/sh

export SVDIR=~/.config/x-service

mode=${1}

if [ -z ${mode} ]; then
	echo "Please specify mode."
	exit 1
fi

case ${mode} in

	reset)
		xrandr \
			--output eDP1 --primary --auto \
			--output DP1 --off \
			--output DP2 --off \
			--output DP2-1 --off \
			--output DP2-2 --off \
			--output DP2-3 --off \
			--output HDMI1 --off \
			--output HDMI2--off

		sv restart session
		;;

	*)
		echo "Mode ${mode} not found."
		exit 1
esac

unset SVDIR
